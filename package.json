{
  "private": true,
  "scripts": {
    "format": "prettier --print-width=100 --write --jsx-bracket-same-line=true 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^3.19.0",
    "husky": "^0.13.3",
    "lerna": "^2.0.0-rc.4",
    "lint-staged": "^3.4.2",
    "nodemon": "1.11.0",
    "prettier": "^1.3.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --print-width=100 --jsx-bracket-same-line=true --write",
      "git add"
    ]
  }
}
