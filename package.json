{
  "private": true,
  "scripts": {
    "format": "prettier --print-width=100 --write --jsx-bracket-same-line=true 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
    "precommit": "lint-staged",
    "bootstrap": "lerna bootstrap --hoist",
    "install": "npm run bootstrap"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "3.19.0",
    "husky": "0.14.1",
    "lerna": "2.0.0-rc.5",
    "lint-staged": "4.0.0",
    "nodemon": "1.11.0",
    "npm": "4.6.1",
    "prettier": "1.5.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --print-width=100 --jsx-bracket-same-line=true --write",
      "git add"
    ]
  }
}
